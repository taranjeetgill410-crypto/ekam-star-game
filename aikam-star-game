<body>

  <h1>Catch the Stars, Aikam ‚≠ê</h1>
  <div id="timer">Time left: 60 ‚è±Ô∏è</div>
  <div id="score">Stars caught: 0 ‚≠ê</div>

  <div class="footer">Tap the ‚≠ê stars quickly!</div>

  <audio id="ding">
    <source src="https://www.soundjay.com/buttons/sounds/button-3.mp3" type="audio/mpeg">
  </audio>

  <script>
    let score = 0;
    let timeLeft = 60;
    let gameActive = true;

    const scoreDisplay = document.getElementById("score");
    const timerDisplay = document.getElementById("timer");
    const sound = document.getElementById("ding");

    function createStar() {
      if (!gameActive) return;

      const star = document.createElement("div");
      star.className = "star";
      star.innerHTML = "‚≠ê";

      star.style.left = Math.random() * (window.innerWidth - 60) + "px";
      star.style.top = Math.random() * (window.innerHeight - 120) + "px";

      star.onclick = () => {
        if (!gameActive) return;
        score++;
        scoreDisplay.innerHTML = "Stars caught: " + score + " ‚≠ê";
        sound.play();
        star.remove();
      };

      document.body.appendChild(star);

      setTimeout(() => {
        if (star.parentNode) star.remove();
      }, 2500);
    }

    const starInterval = setInterval(createStar, 1000);

    const timerInterval = setInterval(() => {
      timeLeft--;
      timerDisplay.innerHTML = "Time left: " + timeLeft + " ‚è±Ô∏è";

      if (timeLeft <= 0) {
        endGame();
      }
    }, 1000);

    function endGame() {
      gameActive = false;
      clearInterval(starInterval);
      clearInterval(timerInterval);

      document.body.innerHTML = `
        <div style="
          display:flex;
          flex-direction:column;
          justify-content:center;
          align-items:center;
          height:100vh;
          background:linear-gradient(#ffecd2,#fcb69f);
          font-family:'Comic Sans MS', cursive;
          text-align:center;
          padding:20px;
        ">
          <h1>üéâ Time‚Äôs Up, Aikam! üéâ</h1>
          <p style="font-size:2rem;">
            You caught <strong>${score}</strong> stars ‚≠ê‚≠ê‚≠ê
          </p>
          <p style="font-size:1.5rem;">
            You are a SUPER STAR üåü
          </p>
          <p style="margin-top:20px;font-size:1.2rem;">
            ‚ù§Ô∏è Love, Papa
          </p>
          <button onclick="location.reload()" style="
            margin-top:25px;
            padding:15px 30px;
            font-size:1.2rem;
            border:none;
            border-radius:25px;
            background:#ff9800;
            color:white;
            cursor:pointer;
          ">
            Play Again üîÅ
          </button>
        </div>
      `;
    }
  </script>

</body>
</html>
